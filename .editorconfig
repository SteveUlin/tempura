# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{cpp,h,hpp}]
indent_style = space
indent_size = 2

# Max line length
max_line_length = 80

[*.{cpp,h,hpp}]
cpp_standard = c++26
trim_trailing_whitespace = true

